<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/BordersLayoutMargin"
    tools:context=".mainapp.presentation.ui.frags.ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <!--            android:elevation="10dp"-->
        <EditText
            android:id="@+id/edit_name"
            android:inputType="textPersonName"
            android:drawableStart="@drawable/ic_person"
            style="@style/EditTextProfile"
            android:hint="Имя" />

        <EditText
            android:id="@+id/edit_date"
            android:inputType="date"
            android:drawableStart="@drawable/ic_date"
            style="@style/EditTextProfile"
            android:hint="Дата рождения" />

        <EditText
            android:id="@+id/edit_email"
            android:inputType="textEmailAddress"
            android:drawableStart="@drawable/ic_email"
            style="@style/EditTextProfile"
            android:hint="Электронный адрес" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_edit_profile"
            style="@style/ButtonMainStyle"
            android:text="Редактировать" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_exit"
            android:layout_marginTop="8dp"
            style="@style/ButtonMainStyle"
            android:elevation="10dp"
            android:text="Выйти из аккаунта" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_save_profile"
            style="@style/ButtonMainStyle"
            android:visibility="gone"
            android:text="Сохранить" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_cancel_profile"
            style="@style/ButtonMainStyle"
            android:visibility="gone"
            android:layout_marginTop="8dp"
            android:text="Отмена" />

    </LinearLayout>




</FrameLayout>